@model EAD.Checkpoint01.Models.Movie
@using EAD.Checkpoint01.Helpers

@{
    ViewData["Title"] = "Detalhes do Filme";
}

<h1>Detalhes do Filme</h1>

<div>
    <h4>@($"Filme: {@Model.Name}")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Synopsis"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Synopsis
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ReleaseDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            <label asp-for="InTheaters"></label>
        </dt>
        <dd class="col-sm-10">
            @(Model.InTheaters ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Duration"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate?.ToShortTimeString()
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Category"></label>
        </dt>
        <dd class="col-sm-10">
            @(Model.Category.GetDisplayName())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar <i class="bi bi-pencil"></i></a>
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista de filmes <i class="bi bi-arrow-return-left"></i></a>
</div>